<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="create_lead_task_wizard_view_form" model="ir.ui.view">
        <field name="name">create.lead.task.wizard.view.form</field>
        <field name="model">create.lead.task.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Task">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <footer>
                        <button string='Add' />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_create_lead_task" model="ir.actions.act_window">
        <field name="name">Create Task</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.lead.task.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref='create_lead_task_wizard_view_form'/>
        <field name="target">new</field>
    </record>

</odoo>
