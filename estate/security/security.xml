<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record model="ir.module.category" id="module_category_estate">
            <field name="name">Estate</field>
        </record>

        <!-- Define "Agent" security group -->
        <record id="estate_group_user" model="res.groups">
            <field name="name">Agent</field>
            <field name="category_id" ref="base.module_category_real_estate_brokerage" />
        </record>

        <!-- Define "Manager" security group -->
        <record id="estate_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="base.module_category_real_estate_brokerage" />
            <field name="implied_ids" eval="[(4, ref('estate_group_user'))]" />
        </record>

        <!-- Access rights for Real Estate Manager (full access to all objects) -->
        <record id="estate_manager_access_properties" model="ir.model.access">
            <field name="name">estate.manager.access.properties</field>
            <field name="model_id" ref="estate.property" />
            <field name="groups" ref="estate_group_manager" />
            <field name="perm_read" eval="1" />
            <field name="perm_write" eval="1" />
            <field name="perm_create" eval="1" />
            <field name="perm_unlink" eval="1" />
        </record>

        <!-- Access rights for Agent (read access to types and tags) -->
        <record id="estate_user_access_types" model="ir.model.access">
            <field name="name">estate.user.access.types</field>
            <field name="model_id" ref="estate.property.type" />
            <field name="group_id" ref="estate_group_user" />
            <field name="perm_read" eval="1" />
            <field name="perm_write" eval="0" />
            <field name="perm_create" eval="0" />
            <field name="perm_unlink" eval="0" />
        </record>

        <record id="estate_user_access_tags" model="ir.model.access">
            <field name="name">estate.user.access.tags</field>
            <field name="model_id" ref="estate.property.tag" />
            <field name="group_id" ref="estate_group_user" />
            <field name="perm_read" eval="1" />
            <field name="perm_write" eval="0" />
            <field name="perm_create" eval="0" />
            <field name="perm_unlink" eval="0" />
        </record>

        <!-- No group has delete permissions on properties -->
        <record id="estate_all_access_properties" model="ir.model.access">
            <field name="name">estate.all.access.properties</field>
            <field name="model_id" ref="estate.property" />
            <field name="group_id" ref="estate_group_user" />
            <field name="perm_read" eval="1" />
            <field name="perm_write" eval="1" />
            <field name="perm_create" eval="1" />
            <field name="perm_unlink" eval="0" />
        </record>
